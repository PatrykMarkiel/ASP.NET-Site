@model WebApplication3.Models.ViewModel.ProfileVm
@using WebApplication3.Helpers
@{
    ViewData["Title"] = "Details";
}


@if (Model != null)
{
    <h1><b>My profile</b></h1>
}
else
{
    <div class="d-flex justify-content-between align-items-center">
        <h1><b>My profile</b></h1>
        <div class="flex-grow-1"></div>
        <a class="btn btn-primary" asp-action="Create">Create New</a>
    </div>

}
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
         @if (Model != null)
        {
        <dd class = "col-sm-10">
            @Model.Name
            </dd>
        }
        else
        {
            <dd class="col-sm-10">
               
            </dd>
        }
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Surname)
        </dt>
         @if (Model != null)
        {
        <dd class = "col-sm-10">
            @Model.Surname
        </dd>
        }
        else
        {
            <dd class="col-sm-10">

            </dd>
        }
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DateOfBirth)
        </dt>
        @if (Model != null)
        {
        <dd class = "col-sm-10">
                @Model.DateOfBirth.ToShortDateString()
        </dd>
        }
        else
        {
            <dd class="col-sm-10">

            </dd>
        }
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Blood)
        </dt>
        @if (Model != null)
        {
            <dd class = "col-sm-10">
                @(Model.Blood.GetDisplayName())
            </dd>
        }
        else
        {
            <dd class="col-sm-10">

            </dd>
        }
    </dl>
</div>
@if (Model != null)
{
    <div class="d-flex justify-content-start gap-2">
        <a class="btn btn-primary" style="height: 38px; width: 70px;" asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
        <a class="btn btn-danger" style="height: 38px; width: 70px;" asp-action="Delete" asp-route-id="@Model.Id">Delete</a>
    </div>


}
